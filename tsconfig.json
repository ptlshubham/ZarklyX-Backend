{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "outDir": "./dist" 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
