# ============================================================================
# GENERAL CONFIGURATION
# ============================================================================

NODE_ENV=development
API_URL=http://localhost:9005
API_PORT=9005

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MongoDB
MONGODB_URI=mongodb://localhost:27017/zarklyX
MONGODB_POOL_SIZE=10

# SQL Database (if using)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zarklyX
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_DIALECT=postgres

# ============================================================================
# AUTHENTICATION & JWT
# ============================================================================

JWT_SECRET=your-secret-key-here
JWT_EXPIRY=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRY=7d

# ============================================================================
# GOOGLE MY BUSINESS (GMB)
# ============================================================================

# Google Cloud Project Credentials
GOOGLE_PROJECT_ID=zarklyX-480012
GOOGLE_CLIENT_EMAIL=your-service-account@zarklyX-480012.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# GMB API Configuration
GOOGLE_REDIRECT_URI=http://localhost:9005/google/oauth2callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GMB Cache Configuration (24-hour fresh + 7-day stale fallback)
GMB_CACHE_TTL_FRESH=86400000        # 24 hours in milliseconds
GMB_CACHE_TTL_STALE=604800000       # 7 days in milliseconds
GMB_ENABLE_CACHE=true
GMB_CACHE_DEBUG=false               # Set to true for cache hit/miss logging

# Rate Limiting
GMB_RATE_LIMIT_ENABLED=true
GMB_RATE_LIMIT_PER_MINUTE=500
GMB_RATE_LIMIT_RETRIES=3
GMB_RATE_LIMIT_BACKOFF_MULTIPLIER=2

# ============================================================================
# LINKEDIN OAUTH2 CONFIGURATION
# ============================================================================

# LinkedIn App Credentials (create at https://www.linkedin.com/developers)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:9005/linkedin/oauth2callback

# LinkedIn Integration Mode
# Options:
#   development = Personal profile only (immediate access)
#   production  = Organization pages + personal (approval required)
# 
# Default: development
# Switch to production ONLY after:
#   1. LinkedIn app approval
#   2. Scope approval (w_organization_social, rw_organization_admin, etc.)
#   3. NODE_ENV=production for extra safety check
LINKEDIN_MODE=development

# LinkedIn Scope Configuration
# These can be overridden per request if needed, but normally scopes are 
# determined by LINKEDIN_MODE above
# 
# Developer Scopes (automatic with LINKEDIN_MODE=development):
# openid profile email w_member_social
# 
# Production Scopes (automatic with LINKEDIN_MODE=production):
# openid profile email w_member_social w_organization_social rw_organization_admin 
# r_organization_admin r_organization_social_analytics r_organization_adminlist r_organization_members
#
# Leave these empty to use LINKEDIN_MODE defaults
LINKEDIN_SCOPES_OVERRIDE=

# LinkedIn API Rate Limiting
LINKEDIN_RATE_LIMIT_ENABLED=true
LINKEDIN_RATE_LIMIT_PER_MINUTE=300   # LinkedIn allows 300 per minute

# ============================================================================
# FACEBOOK INTEGRATION
# ============================================================================

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:9005/facebook/oauth2callback
FACEBOOK_GRAPH_API_VERSION=v18.0

# ============================================================================
# INSTAGRAM INTEGRATION
# ============================================================================

INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@zarklyX.com
SMTP_FROM_NAME=ZarklyX

# ============================================================================
# AWS S3 / CLOUD STORAGE
# ============================================================================

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=zarklyX-bucket
AWS_S3_FOLDER=uploads

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

LOG_LEVEL=info                      # error, warn, info, debug
LOG_FORMAT=json                     # json, text
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/application.log
LOG_MAX_FILE_SIZE=10m              # Rotate logs when they reach 10MB
LOG_MAX_FILES=5                     # Keep 5 log files

# Error Tracking (e.g., Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================

MAX_FILE_SIZE=52428800             # 50MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif,zip
UPLOAD_DIR=./public/uploads

# ============================================================================
# SECURITY
# ============================================================================

CORS_ORIGIN=http://localhost:4200,http://localhost:3000
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_EXPIRY=86400000             # 24 hours in milliseconds

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

FRONTEND_URL=http://localhost:4200
FRONTEND_PORTAL_URL=http://localhost:4200/portal

# ============================================================================
# FEATURE FLAGS
# ============================================================================

FEATURE_GMB_ENABLED=true
FEATURE_LINKEDIN_ENABLED=true
FEATURE_FACEBOOK_ENABLED=true
FEATURE_INSTAGRAM_ENABLED=true
FEATURE_EMAIL_MARKETING=true
FEATURE_ANALYTICS=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

DEBUG=false
VERBOSE_LOGGING=false
ALLOW_CONSOLE_LOGS=true             # Set to false in production
